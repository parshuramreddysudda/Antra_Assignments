<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - EShopMVCProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/EShopMVCProject.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
       <div class="container">
           <!-- Brand -->
           <a class="navbar-brand" href="#">Antra</a>
           <!-- Toggler/collapsible Button -->
           <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                   aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
           </button>
           <!-- Navbar links -->
           <div class="collapse navbar-collapse" id="navbarNav">
               <ul class="navbar-nav">
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Product" asp-action="Create">Products Create</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Customer" asp-action="Create">Customers Create</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Customer" asp-action="Index">Customers</a>
                   </li>
               </ul>
               <!-- Right-aligned items -->
               <ul class="navbar-nav ms-auto">
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Product">Login</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" href="#">Sign Up</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" href="#"><i class="bi bi-cart"></i> Cart</a>
                   </li>
               </ul>
           </div>
       </div>
   </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - EShopMVCProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>