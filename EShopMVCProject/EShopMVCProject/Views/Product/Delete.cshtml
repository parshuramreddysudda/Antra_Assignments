@model ApplicationCore.Model.Response.ProductResponseModel

@{
    ViewBag.Title = "Delete Product";
    Layout = "_Layout";
}

<h2>Delete Product</h2>

<div>
    <p>Are you sure you want to delete the product <strong>@Model.Name</strong>?</p>
    <form asp-action="Delete" asp-controller="Product" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
    </form>
</div>